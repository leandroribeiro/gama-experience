<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />

    <html xmlns='http://www.w3.org/1999/xhtml'
          xmlns:og='http://ogp.me/ns#'>
    <meta property='og:title' content='UVídeos | Como Fazer Transmissões Profissionais' />
    <meta property='og:description' content='Aprenda a comunicar-se com o seu público e utilizar os canais de comunicação que tem a disposição para ter mais qualidade, audiencia, transmitir informação e criar relacionamentos.' />
    <meta property='og:url' content='http://uvideos.com.br' />
    <meta property='og:image' content='http://uvideos.com.br/images/banner.jpg' />
    <meta property='og:type' content='website' />
    <meta property='og:site_name' content='UVídeos' />

    <script type="applijewelleryion/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="//fonts.googleapis.com/css?family=Roboto+Condensed:400,700" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" type="text/css">
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @{ Html.RenderPartial("_Header"); }

    <!-- banner -->
    @RenderSection("banner", required: false)

    <!-- technology -->
    <div class="technology">
        <div class="container">

            <div class="col-md-9 technology-left">
                @RenderBody()
            </div>

            @{ Html.RenderPartial("_Sidebar"); }
        </div>
    </div>
    @{ Html.RenderPartial("_Footer"); }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--código de acompanhamento do google analytics-->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-90732233-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>

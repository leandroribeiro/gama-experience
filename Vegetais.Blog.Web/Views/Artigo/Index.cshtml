@model Vegetais.Blog.Web.Models.ArtigoViewModel

@{
    ViewBag.Title = Model.Titulo;
}

<div class="business">
    <div class=" blog-grid2">

        @if (!String.IsNullOrEmpty(Model.Imagem))
        {
            <a href="@Model.Link"><img src="@Model.Imagem" class="img-responsive" alt="" /></a>
        }

        @if (!String.IsNullOrEmpty(Model.Video))
        {
            @Html.Raw(Model.Video)
        }

        <div class="blog-text">
            <h5>@Model.Titulo</h5>
            @Html.Raw(Model.Conteudo)
        </div>
    </div>


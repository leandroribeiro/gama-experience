@model IEnumerable<Vegetais.Blog.Web.Artigo>

@{
    ViewBag.Title = "Artigos";
}

<h2>Artigos</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataDePublicacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.Raw(item.DataDePublicacao.ToString("dd/MM/yyy HH:mm:ss"))
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.Raw((String.IsNullOrEmpty(item.Imagem) ? "Não" : "Sim"))
            </td>
            <td>
                @Html.Raw((String.IsNullOrEmpty(item.Video) ? "Não" : "Sim"))
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Ver", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

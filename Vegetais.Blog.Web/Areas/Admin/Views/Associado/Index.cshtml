@model IEnumerable<Vegetais.Blog.Web.Associado>

@{
    ViewBag.Title = "Index";
}

<h2>Associados</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <thead>
        <tr>
            <td colspan="6"><h4>@Model.Count()</h4></td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraCadastro)
            </th>
            <th>@Html.DisplayNameFor(model => model.OrigemDoCadastro)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraCadastro)
                </td>
                <td>@Html.DisplayFor(modelItem => item.OrigemDoCadastro)</td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6"><h4>@Model.Count()</h4></td>
        </tr>
    </tfoot>

</table>
